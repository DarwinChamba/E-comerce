<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.InicioFragment">

  <ImageView
      android:id="@+id/image1"
      android:src="@drawable/texture_left"
      android:layout_width="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startGuie"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.30"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/endGuie"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.70"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuie"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/centerGuie"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.40"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomGuie"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.60"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/image2"
        android:layout_width="0dp"
        android:background="@drawable/ellips"
        app:layout_constraintTop_toTopOf="@id/topGuie"
        app:layout_constraintEnd_toEndOf="@id/endGuie"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="@id/bottomGuie"
        app:layout_constraintStart_toStartOf="@id/startGuie"
        android:layout_height="0dp"/>
    <TextView
        android:id="@+id/text1"
        app:layout_constraintTop_toTopOf="@id/centerGuie"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="@id/startGuie"
        app:layout_constraintEnd_toEndOf="@id/endGuie"
        app:layout_constraintBottom_toBottomOf="@id/bottomGuie"
        android:text="@string/app_e_comerce_in_android_kotlin"
        style="@style/h4"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="35sp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:src="@drawable/texture_right"
        app:layout_constraintTop_toTopOf="@id/centerGuie"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        style="@style/blueButtonStyle"
        app:layout_constraintTop_toTopOf="@id/bottomGuie"
        app:layout_constraintEnd_toEndOf="@id/endGuie"
        android:text="Start"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/bottomGuie"
        app:layout_constraintStart_toStartOf="@id/startGuie"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>