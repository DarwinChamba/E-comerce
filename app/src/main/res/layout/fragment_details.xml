<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_marginHorizontal="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.fragmentShopping.fragmentDeatails.DetailsFragment">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <androidx.cardview.widget.CardView
          android:id="@+id/cardImages"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_width="match_parent"
          android:layout_height="350dp"
          android:layout_marginTop="20dp"
          app:cardElevation="0dp"
          app:cardCornerRadius="15dp"
          android:layout_marginHorizontal="10dp">
          <androidx.viewpager2.widget.ViewPager2
              android:id="@+id/viewPagerProductImage"
              android:layout_width="match_parent"
              android:layout_height="match_parent"/>

          <ImageView
              android:id="@+id/closeImage"
              app:tint="@color/black"
              android:src="@drawable/ic_close"
              android:layout_width="40dp"
              android:padding="5dp"
              android:layout_height="40dp"/>
      </androidx.cardview.widget.CardView>
      <TextView
          android:id="@+id/tvName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Lofcoding"
          android:layout_marginTop="10dp"
          android:textSize="25sp"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:layout_marginStart="10dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/cardImages"/>
      <TextView
         android:id="@+id/tvPrice"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:hint="600$"
          android:layout_marginTop="10dp"
          android:textSize="20sp"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:layout_marginStart="10dp"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginEnd="10dp"
          app:layout_constraintTop_toBottomOf="@+id/cardImages"/>
      <TextView
          android:id="@+id/tvDesciption"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="$500"
          android:layout_marginTop="10dp"
          android:textSize="20sp"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:layout_marginStart="10dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/tvName"/>
      <View
          android:id="@+id/line"
          android:layout_marginTop="10dp"
          android:background="#0C8BEF"
          android:layout_marginHorizontal="10dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@id/tvDesciption"
          android:layout_width="match_parent"
          android:layout_height="3dp"/>
      <LinearLayout
          android:id="@+id/linear2"
          app:layout_constraintTop_toBottomOf="@id/line"
          android:layout_marginTop="20dp"
          android:orientation="horizontal"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <LinearLayout
              android:layout_weight="1"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="colors:"
                  android:padding="3dp"
                  android:textStyle="bold"
                  android:textSize="20sp"/>
              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rvColors"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
          </LinearLayout>
          <LinearLayout
              android:layout_weight="1"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Sizes:"
                  android:padding="3dp"
                  android:textStyle="bold"
                  android:textSize="20sp"/>
              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rvSizes"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
          </LinearLayout>

      </LinearLayout>
      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/btnAddToCart"
          android:background="@drawable/back_1"
          android:layout_marginTop="10dp"
          android:textSize="20sp"
          android:textColor="@color/white"
          app:layout_constraintTop_toBottomOf="@id/linear2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintBottom_toBottomOf="parent"
          android:layout_marginBottom="10dp"
          android:text="Add to cart"/>

  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>